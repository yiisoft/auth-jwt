{
    "name": "yiisoft/auth-jwt",
    "type": "library",
    "description": "Yii auth JWT method",
    "keywords": [
        "auth",
        "jwt",
        "middleware",
        "psr-15"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/auth-jwt/issues?state=open",
        "source": "https://github.com/yiisoft/auth-jwt",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "ircs://irc.libera.chat:6697/yii",
        "chat": "https://t.me/yii3en"
    },
    "funding": [
        {
            "type": "opencollective",
            "url": "https://opencollective.com/yiisoft"
        },
        {
            "type": "github",
            "url": "https://github.com/sponsors/yiisoft"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/http-message": "^1.0|^2.0",
        "web-token/jwt-library": "^3.3",
        "yiisoft/auth": "^3.0",
        "yiisoft/http": "^1.2",
        "yiisoft/json": "^1.0"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^3.8|^4.2",
        "nyholm/psr7": "^1.3",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^2.0.0",
        "roave/infection-static-analysis-plugin": "^1.16",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.30|^5.21",
        "yiisoft/di": "^1.1",
        "yiisoft/injector": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Auth\\Jwt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Auth\\Jwt\\Tests\\": "tests"
        }
    },
    "extra": {
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "di": "di.php",
            "params": "params.php"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
